<?xml version="1.0" encoding="utf-8"?>
<form
    lessfiles="media://com_meiadmin/css/product.less||media://com_meiadmin/css/product.css"
    validate="true"
    type="edit"
    jsfiles="media://system/js/mootools-more.js"
>
    <fieldset name="customerAttributes" class="span4" label="COM_MEIADMIN_CUSTOMER">
        <field name="username" type="text"
               label="COM_MEIADMIN_CUSTOMER_FIELD_USERNAME"
               class="meiadmin-title-field"
               size="50"
               required="true"
         />
        <field name="password" type="password"
               label="COM_MEIADMIN_CUSTOMER_FIELD_OLD_PASSWORD"
               class="meiadmin-title-field"
               size="50"
               required="true"
                />
        <field name="newPassword" type="password"
               label="COM_MEIADMIN_CUSTOMER_FIELD_NEW_PASSWORD"
               class="meiadmin-title-field"
               size="50"
               required="true"
                />
        <field name="newPasswordConfirm" type="password"
               label="COM_MEIADMIN_CUSTOMER_FIELD_PASSWORD_CONFIRM"
               class="meiadmin-title-field"
               size="50"
               required="true"
                />
        <field name="submit" type="button"
               text="COM_MEIADMIN_CUSTOMER_BUTTON_SUBMIT"
               class="meiadmin-title-button"
               onclick="Joomla.submitbutton('changepassword')"
                />
        <field type="menuitem" />
        <field type="hidden" name="fk_user_id" default="0"/>
    </fieldset>
</form>