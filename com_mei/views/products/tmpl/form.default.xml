<?xml version="1.0" encoding="utf-8"?>
<form
    lessfiles="media://com_mei/css/backend.less||media://com_mei/css/backend.css"
    type="browse"
    show_header="0"
    show_filters="0"
    show_pagination="1"
    norows_placeholder="COM_MEI_COMMON_NORECORDS"
>
    <headerset>
        <header name="title" type="fieldsearchable" sortable="false"
            buttons="false" 
        />
    </headerset>

    <fieldset name="items">
         <field name="title" type="text"
            show_link="true"
            url="index.php?option=com_mei&amp;view=product&amp;id=[ITEM:ID]"
            class="meiitem"
            empty_replacement="(no title)"
         />

    </fieldset>
</form>
