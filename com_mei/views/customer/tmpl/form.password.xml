<?xml version="1.0" encoding="utf-8"?>
<form
        lessfiles="media://com_meiadmin/css/product.less||media://com_meiadmin/css/product.css"
        validate="true"
        type="edit"
        jsfiles="media://system/js/mootools-more.js"
        name="password"
        >
    <fieldset name="customerPassword" label="COM_MEI_CUSTOMER_PASSWORD_CHANGE">
        <field name="password" type="password"
               label="COM_MEI_CUSTOMER_FIELD_OLD_PASSWORD"
               class="mei-title-field"
               size="50"
               required="true"
                />
        <field name="newPassword" type="password"
               label="COM_MEI_CUSTOMER_FIELD_NEW_PASSWORD"
               class="mei-title-field"
               size="50"
               required="true"
                />
        <field name="newPasswordConfirm" type="password"
               label="COM_MEI_CUSTOMER_FIELD_PASSWORD_CONFIRM"
               class="mei-title-field"
               size="50"
               required="true"
                />
        <field name="submit" type="button"
               text="COM_MEI_CUSTOMER_BUTTON_SAVE_PASSWORD"
               class="mei-title-button bttn"
               onclick="Joomla.submitbuttonPassword('changepassword')"
                />
        <field type="menuitem" />
        <field type="hidden" name="fk_user_id" default="0"/>
        <field type="hidden" name="meiadmin_customer_id" default="0"/>
    </fieldset>
</form>