<?xml version="1.0" encoding="utf-8"?>
<form
        lessfiles="media://com_meiadmin/css/product.less||media://com_meiadmin/css/product.css"
        validate="true"
        type="edit"
        enctype="multipart/form-data"
        >
    <fieldset name="customerImage" label="COM_MEI_CUSTOMER_IMAGE">
        <field type="file"
               label="COM_MEI_IMAGE_UPLOAD"
               description="COM_MEI_IMAGE_UPLOAD_DESC"
               name="image"
                />
        <field name="submit" type="button"
               text="COM_MEI_CUSTOMER_BUTTON_SAVE_IMAGE"
               class="mei-title-button"
               onclick="Joomla.submitbutton('save')"
                />
        <field type="menuitem" />
        <field type="hidden" name="fk_user_id" default="0"/>
        <field type="hidden" name="meiadmin_customer_id" default="0"/>
        <field type="hidden" name="task" default="saveImage"/>
    </fieldset>
</form>